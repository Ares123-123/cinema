<view style="display:inline-flex">
  <view style="width:flex;height:flex;padding:10px;float:left;">可选</view>
  <view style="background:white;width:30px;height:30px;margin-top:5px;float:left;border-radius:5px"></view>

  <view style="width:flex;height:flex;padding:10px;float:left;">已售</view>
  <view style="background:#f05b72;width:30px;height:30px;margin-top:5px;float:left;border-radius:5px"></view>

  <view style="width:flex;height:flex;padding:10px;float:left;">已选</view>
  <view style="background:#bed742;width:30px;height:30px;margin-top:5px;float:left;border-radius:5px"></view>
</view>

<!--当前选择-->
<view wx:if="{{currentSeat}}" style="margin:1%;;width:94%;height:flex;padding:5px;background:white">
当前选择：<text style="margin-right:1rem">{{myseat}}号</text>  <text>单价￥{{session_price}}</text>
<text bindtap="place_order" style="margin-left:4rem;width:50px;height:15px;padding:2px;background:pink;border-radius:5px;">确认下单</text>
</view>

<view style="text-align:center;margin:10px;">
  {{film_name}}
</view>

<view style="display:inline-block;margin:10px;">
  <view wx:for="{{seat}}" wx:for-item="seat" data-number="{{seat.number}}" 
  class="seat_unactive {{currentSeat==seat.number?'seat_active':''}}" bindtap="chooseSeat">
    <view wx:if="{{seat.state==0}}" style="font-size:10px;text-align:center;line-height:25px;">{{seat.number}}</view>
    <view wx:if="{{seat.state==1}}" style="font-size:10px;text-align:center;line-height:25px;background:#f05b72">{{seat.number}}</view>
  </view>
</view>


