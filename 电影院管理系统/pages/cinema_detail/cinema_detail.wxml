  <view class="page-section-gap">
    <map
      id="myMap"
      style="width:100%; height: 200px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      bindmarkertap="markertap"
      bindcallouttap="callouttap"
      bindlabeltap="labeltap"
      markers="{{markers}}"
      scale="16"
    >
      <cover-view slot="callout">
        <block wx:for="{{customCalloutMarkerIds}}" wx:key="*this">
          <cover-view  class="customCallout" marker-id="{{item}}" >
          </cover-view>
        </block>
      </cover-view>
    </map>
  </view>
  <view style="margin:0.5rem;background:whitesmoke;width:100%;height:50px;white-space:nowrap;display:inline-flex">
  <scroll-view scroll-x>
    <view style="width:100%;height:flex;display:inline-flex;">
      <view wx:for="{{showFilm}}" data-film_id="{{item.film_id}}" bindtap="click_film" style="float:left;width:flex;background:white;margin:5px;color:red">
        <view>{{item.film_name}}</view>
    </view>
    </view>
  </scroll-view>
</view>

  <view>场次安排</view>
  <view style="background:whitesmoke"> 
    <view wx:for="{{session}}" wx:if="{{item.film_id==id||id==''}}" style="background:white;width:100%;height:flex;margin:5px">
     {{item.session_time}}
     {{item.hall_number}}号厅
     {{item.film_name}}
     ￥{{item.session_price}}
     <view data-session_id="{{item.session_id}}"  data-session_price="{{item.session_price}}" bindtap="choose_seat" style="display:inline-block;padding:3px;border-radius:6px;;background:pink;margin-left:80%">购票</view>
    </view>
  </view>
